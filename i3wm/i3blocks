# Restart i3 on click
[restart]
full_text=Restart
command=i3-msg -q restart
#interval=0

# Guess the weather every 15 mins
[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=900
color=#A4C2F4

[date]
command=date '+%Y-%m-%d'
interval=1 

[time]
command=date  '+%H:%M'
interval=1

